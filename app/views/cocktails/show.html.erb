<h1>Cocktails#show</h1>

<p><%= @cocktail.name %></p>
<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> | <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %><br>
<%= link_to 'Back to list', cocktails_path %>
